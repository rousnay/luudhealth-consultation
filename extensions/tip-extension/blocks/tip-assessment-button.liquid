{% render 'tip-assessment-button-content' %}

{% schema %}
{
  "name": "Assessment Button",
  "target": "section",
  "enabled_on": {
    "templates": ["*"]
  },
  "stylesheet": "tip-app.css",
  "settings": [
    {
      "label": "Treatment ID",
      "id": "treatment_id",
      "type": "number",
      "placeholder": "Enter a treatment ID here"
    },
    {
      "type": "radio",
      "label": "Treatment Type",
      "id": "treatment_type",
      "options": [
        {
          "label": "Pharmacy",
          "value": "pharmacy"
        },
        {
          "label": "Non Pharmacy",
          "value": "non_pharmacy"
        }
      ],
      "default": "pharmacy"
    },
    {
      "label": "Theme Color",
      "id": "theme_color",
      "type": "color",
      "default": "#583222"
    }
  ]
}
{% endschema %}
